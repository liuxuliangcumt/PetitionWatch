<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelwatch.activity.TaskSearchActivity">

    <include layout="@layout/activitytitle_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="33dp"
        android:paddingRight="33dp"
        android:paddingTop="8dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_petition"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_common"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="16dp"
            android:hint="搜索"
            android:paddingLeft="6dp"
            android:textColorHint="@color/c999999"
            android:textSize="14sp" />


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_spinner"
            android:elevation="4dp"
            android:gravity="center"
            android:spinnerMode="dropdown"></android.support.v7.widget.AppCompatSpinner>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ce1e1e1" />

    <ListView
        android:id="@+id/lv_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ce1e1e1" />
</LinearLayout>
