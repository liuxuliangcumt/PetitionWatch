<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelcity.activity.CityAddTaskActivity">

    <include layout="@layout/activitytitle_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="任务标题"
            android:textColor="@color/bigTextColor"
            android:textSize="@dimen/bigTextSize" />

        <com.realpower.petitionwatch.view.ClearEditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normalTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="任务描述"
            android:textColor="@color/bigTextColor"
            android:textSize="@dimen/bigTextSize" />

        <com.realpower.petitionwatch.view.ClearEditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normalTextSize" />


        <LinearLayout
            android:id="@+id/ll_timeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间:"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <TextView
                android:id="@+id/tv_timeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选择时间"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normalTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_timeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间:"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <TextView
                android:id="@+id/tv_timeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选择时间"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normalTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择任务执行人:"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <TextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选择任务执行人"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normalTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:background="@drawable/bg_login_btn"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/bigTextSize" />
</LinearLayout>
