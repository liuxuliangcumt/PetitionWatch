<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelstaff.activity.SuggestionDetailActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反映编号"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"

                android:theme="@style/MyEdittext" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户籍区域"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"

                android:theme="@style/MyEdittext" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="催办次数及最后一次催办时间"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_urge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见详情"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:id="@+id/tv_picname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见照片"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomGridVeiw
                android:id="@+id/gv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="8dp"></com.realpower.petitionwatch.view.CustomGridVeiw>

            <TextView
                android:id="@+id/tv_videoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="意见视频"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"></com.realpower.petitionwatch.view.CustomListView>

            <TextView
                android:id="@+id/tv_voicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="意见语音"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize"
                android:visibility="gone" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_resultName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理结果"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:theme="@style/MyEdittext" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_acount"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/bg_login_btn"
                android:gravity="center"
                android:text="开始处理"
                android:textColor="@color/white"
                android:textSize="19sp" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
