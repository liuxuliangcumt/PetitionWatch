        <TextView
            android:id="@+id/tv_petition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/appeal_icon"
            android:gravity="center"
            android:text="诉求处理"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_suggestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/opinion_icon"
            android:gravity="center"
            android:text="处理意见"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_importantPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/important_person_icon"
            android:gravity="center"
            android:text="重点人员"
            android:visibility="gone"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_addressBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/address_book_icon"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="@color/c808080"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cha"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@mipmap/del_icon" />
</LinearLayout>