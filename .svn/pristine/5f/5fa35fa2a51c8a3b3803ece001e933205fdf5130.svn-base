<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here.   android:Theme.NoTitleBar  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/textColorHint</item>
        <item name="colorControlActivated">@color/colorButtonNormal</item>
        <item name="colorControlHighlight">@color/c303F9F</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:editTextStyle">@style/MyNormalEdittext</item>
        <item name="android:listViewStyle">@style/MyListViewStyle</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">10dp</item>
    </style>

    <style name="MyListViewStyle" parent="Base.Widget.AppCompat.ListView">
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="MyGrayButton" parent="LoginTheme">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/textColorHint</item>
    </style>

    <style name="MyYellowButton" parent="LoginTheme">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/cE59C0E</item>
    </style>

    <style name="MyButten_Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/default_divider_height</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="MyNormalEdittext" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/textColorHint</item>
        <item name="colorControlNormal">@color/textColorHint2</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="android:background">@drawable/edittext_normal_bg</item>
    </style>
    <!--无效果  无背景editext-->
    <style name="MyClearEdittext" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/textColorHint</item>
        <item name="colorControlNormal">@color/textColorHint2</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="android:background">@null</item>
    </style>


    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/c75touming</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="customAnimationDialog" parent="@android:style/Theme.Dialog">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        //动画效果
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
        <item name="android:textColorPrimary">#DD000000</item>
        <item name="android:textColorSecondary">#8A000000</item>
        <item name="android:textColorHint">#42000000</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    //进入和退出的动画命名

    <style name="MyAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_exit</item>
    </style>

    <style name="GradedRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/textColorHint</item>
        <item name="colorControlActivated">@color/ce1a93c</item>
    </style>

    <style name="LoginTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LoginTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DialogBottom">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MySpnner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_login_btn</item>
    </style>

    <style name="MyEdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:baseline">@null</item>
        <item name="background">@null</item>
    </style>
    <!--去掉阴影边框-->
    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_login_btn</item>
        <item name="android:tint">@color/ce59c0e</item>
    </style>

    <declare-styleable name="TabLayout">
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabIndicatorHeight" format="dimension" />
        <attr name="tabContentStart" format="dimension" />
        <attr name="tabContentWidth" format="dimension" />
        <attr name="tabBackground" format="reference" />
        <attr name="tabMode">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>

        <attr name="tabGravity">
            <enum name="fill" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="tabMinWidth" format="dimension" />
        <attr name="tabMaxWidth" format="dimension" />
        <attr name="tabTextAppearance" format="reference" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabPaddingStart" format="dimension" />
        <attr name="tabPaddingTop" format="dimension" />
        <attr name="tabPaddingEnd" format="dimension" />
        <attr name="tabPaddingBottom" format="dimension" />
        <attr name="tabPadding" format="dimension" />
        <!--自定义属性-->
        <attr name="bottomLineColor" format="color" />//底部分隔栏颜色
        <attr name="dividerColor" format="color" />
        <attr name="bottomLineHeight" format="dimension" />//底部分隔栏高度
        <attr name="dividerWidth" format="dimension" />//竖直分割线宽高
        <attr name="dividerHeight" format="dimension" />
        <attr name="bottomLineMode">
            <enum name="none" value="0" />//不显示底部分隔栏
            <enum name="outer" value="1" />//显示在滑动栏外面
            <enum name="inner" value="2" />//显示在滑动栏里面

        </attr>

    </declare-styleable>

    <style name="MyEdittext" parent="Base.Widget.AppCompat.EditText">
        <item name="android:focusable">false</item>
        <item name="colorControlNormal">@color/textColorHint</item>
        <item name="colorControlActivated">@color/textColorHint</item>
        <item name="android:textColor">@color/c808080</item>
        <item name="android:textSize">@dimen/pageNormalTextSize</item>
        <item name="android:background">@drawable/edittext_normal_bg</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="PageLineTitleTextView">
        <item name="android:textColor">@color/c333333</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">@dimen/pageNormalTextSize</item>
    </style>

    <style name="PageLineContentTextView">
        <item name="android:textColor">@color/c808080</item>
        <item name="android:textSize">@dimen/pageNormalTextSize</item>
        <item name="android:background">@drawable/edittext_normal_bg</item>
    </style>

    <style name="listTitleTextView">
        <item name="android:textSize">@dimen/listTitleTextSize</item>
        <item name="android:textColor">@color/c202020</item>
    </style>

    <style name="listContentTextView">
        <item name="android:textSize">@dimen/listContentTextSize</item>
        <item name="android:textColor">@color/c808080</item>
    </style>

    <style name="listThreeTextView">
        <item name="android:textSize">@dimen/listThreeTextSize</item>
        <item name="android:textColor">@color/cb2b2b2</item>
    </style>

    <style name="normalBtn" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:background">@drawable/bg_login_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>
</resources>
