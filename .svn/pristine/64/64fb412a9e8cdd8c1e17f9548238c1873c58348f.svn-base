<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelcounty.activity.KeyPersonDetailActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/pagePadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:theme="@style/PageLineTitleTextView" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="爱上对方感受到法国" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号" />

            <TextView
                android:id="@+id/tv_idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/PageLineContentTextView" />


            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/PageLineContentTextView" />


            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆型号" />

            <TextView
                android:id="@+id/tv_carType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无"
                android:theme="@style/PageLineContentTextView" />


            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆牌号" />

            <TextView
                android:id="@+id/tv_carNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无"
                android:theme="@style/PageLineContentTextView" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆颜色" />

            <TextView
                android:id="@+id/tv_carColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无"
                android:theme="@style/PageLineContentTextView" />


            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/PageLineTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:theme="@style/PageLineContentTextView" />

            </LinearLayout>

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址" />

            <TextView
                android:id="@+id/tv_addressDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无"
                android:theme="@style/PageLineContentTextView" />


            <TextView
                android:id="@+id/tv_picLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="照片上传"
                android:textColor="@color/c333333"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.realpower.petitionwatch.view.CustomGridVeiw
                android:id="@+id/GV_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:verticalSpacing="10dp" />


            <TextView
                android:id="@+id/tv_kins"
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亲属信息" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_kins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/cf7f7f7"
                android:divider="#f1f1f1"
                android:dividerHeight="10dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_edit"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="75dp"
                android:layout_marginTop="95dp"
                android:background="@drawable/bg_btn_ce59c0e"
                android:gravity="center"
                android:text="监控"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:theme="@style/MyButten_Borderless" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
