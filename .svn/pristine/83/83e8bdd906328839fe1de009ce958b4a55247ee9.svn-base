<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelcounty.activity.NewMonitorTaskActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/pagePadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被监控人"
                android:theme="@style/PageLineTitleTextView" />

            <TextView
                android:id="@+id/tv_monitored"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务标题" />

            <com.realpower.petitionwatch.view.ClearEditText
                android:id="@+id/et_title"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入任务标题"
                android:minHeight="30dp" />


            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务内容" />


            <com.realpower.petitionwatch.view.ClearEditText
                android:id="@+id/et_content"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入任务内容"
                android:minHeight="30dp" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择起止时间" />


            <TextView
                android:id="@+id/tv_time"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:focusable="false"
                android:hint="选择起止时间" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择监控工作人员" />


            <TextView
                android:id="@+id/tv_monitor"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:focusable="false"
                android:hint="选择监控工作人员" />


            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属区域" />


            <TextView
                android:id="@+id/tv_address"
                style="@style/PageLineContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:hint="请选择" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_ok"
                style="@style/normalBtn"
                android:text="确认" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>
