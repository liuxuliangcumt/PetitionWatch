<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelstaff.activity.PetitionDetailActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/pagePadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题反映编号"
                android:theme="@style/PageLineTitleTextView" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />


            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联名人" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_jointers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户籍区域" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诉求类别" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="催办次数及最后一次催办时间" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_urge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诉求详情" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:textColor="@color/c909090"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:id="@+id/tv_picname"
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诉求照片" />


            <com.realpower.petitionwatch.view.CustomGridVeiw
                android:id="@+id/gv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="@dimen/horizontalSpacing"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:verticalSpacing="@dimen/verticalSpacing" />

            <TextView
                android:id="@+id/tv_videoname"
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诉求视频" />


            <com.realpower.petitionwatch.view.CustomGridVeiw
                android:id="@+id/lv_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="@dimen/horizontalSpacing"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:verticalSpacing="@dimen/verticalSpacing" />

            <TextView
                android:id="@+id/tv_voicename"
                style="@style/PageLineTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诉求语音" />


            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" />

            <!--   <TextView
                   android:id="@+id/tv_resultName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25dp"
                   android:text="意见处理回复"
                   android:textColor="@color/c6d6d6d"
                   android:textSize="16sp" />

               <android.support.v7.widget.AppCompatTextView
                   android:id="@+id/tv_reply"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:paddingLeft="12dp"
                   android:text="思考马上处理洁阿斯加德鸡飞狗叫OAO实地覅看看"
                   android:textColor="@color/c909090"
                   android:textSize="15sp"
                   android:theme="@style/MyEdittext" />-->

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_acount"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/bg_login_btn"
                android:text="开始处理"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_ce59c0e"
                android:text="添加至重点人库"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
