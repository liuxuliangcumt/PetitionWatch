<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelwatch.activity.TaskSearchDetailActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normalTextSize"
                android:theme="@style/MyEdittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="手机号"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />


            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13695258451"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normalTextSize"
                android:theme="@style/MyEdittext" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="身份证号"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <TextView
                android:id="@+id/tv_idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="130464822545222123258"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normalTextSize"
                android:theme="@style/MyEdittext" />

            <TextView
                android:id="@+id/tv_stateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="状态"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="@color/white"></com.realpower.petitionwatch.view.CustomListView>

            <TextView
                android:id="@+id/tv_safeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="安全级别"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="@color/white"></com.realpower.petitionwatch.view.CustomListView>

            <TextView
                android:id="@+id/tv_remarksName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="备注"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="@color/white"
                android:dividerHeight="10dp"></com.realpower.petitionwatch.view.CustomListView>

            <TextView
                android:id="@+id/tv_picname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="照片"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomGridVeiw
                android:id="@+id/gv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"></com.realpower.petitionwatch.view.CustomGridVeiw>

            <TextView
                android:id="@+id/tv_videoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="视频"
                android:textColor="@color/bigTextColor"
                android:textSize="@dimen/bigTextSize" />

            <com.realpower.petitionwatch.view.CustomListView
                android:id="@+id/lv_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"></com.realpower.petitionwatch.view.CustomListView>

            <!--  <android.support.v7.widget.AppCompatButton
                  android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="70dp"
                  android:layout_marginTop="68dp"
                  android:text="返回"
                  android:textColor="@color/white"
                  android:textSize="16sp" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
