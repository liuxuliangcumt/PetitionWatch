<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/trajectory_icon"
            android:gravity="center"
            android:text="人员轨迹"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/check_the_monitor_icon"
            android:gravity="center"
            android:text="查看监控"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_addressBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/address_book_icon"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_statistical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/statistical_analysis_icon"
            android:gravity="center"
            android:text="统计"
            android:textColor="@color/c808080"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/arrange_task_icon"
            android:gravity="center"
            android:text="我的任务"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/personnel_management_icon"
            android:gravity="center"
            android:text="人员管理"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/give_an_alarml_icon"
            android:gravity="center"
            android:text="告警信息"
            android:textColor="@color/c808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_monitorTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/task_icon"
            android:gravity="center"
            android:text="监控任务"
            android:textColor="@color/c808080"
            android:textSize="12sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_cha"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@mipmap/del_icon" />
</LinearLayout>