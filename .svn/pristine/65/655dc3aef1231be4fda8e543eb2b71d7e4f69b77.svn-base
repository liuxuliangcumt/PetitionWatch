<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelwatch.activity.TaskSearchActivity">

    <include layout="@layout/activitytitle_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bg_search_ed"
            android:drawableLeft="@mipmap/search_navigation_bar_icon"
            android:drawablePadding="5dp"
            android:hint="搜索诉求"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_petition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_search"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:scrollIndicators="right"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="@color/cf5f5f5"
        app:tabSelectedTextColor="@color/c333333"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/ca4a4a4" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_petition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>
