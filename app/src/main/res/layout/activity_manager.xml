<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petitionwatch.modelcounty.activity.ManagerActivity">

    <include layout="@layout/activitytitle_common" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/c2A97E6"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_petition"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/home_radiobutton_bg"
            android:gravity="center"
            android:text="重点人"
            android:textColor="@drawable/radiobutton_textcolor" />

        <RadioButton
            android:id="@+id/rb_monitor"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/home_radiobutton_bg"
            android:gravity="center"
            android:text="监控人员"
            android:textColor="@drawable/radiobutton_textcolor" />
    </RadioGroup>

    <ListView
        android:id="@+id/lv_petition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></ListView>

    <ListView
        android:id="@+id/lv_monitor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
